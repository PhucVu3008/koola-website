# Server
NODE_ENV=development
PORT=4000
HOST=0.0.0.0

# Database
DATABASE_URL=postgresql://koola_user:koola_password@localhost:5432/koola_db

# JWT
JWT_ACCESS_SECRET=your-super-secret-access-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIMEWINDOW=60000

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Email/SMTP Configuration
# For Gmail: smtp.gmail.com, port 587, secure=false
# For Gmail App Password: https://myaccount.google.com/apppasswords
# For SendGrid: smtp.sendgrid.net, port 587, secure=false
# For Mailgun: smtp.mailgun.org, port 587, secure=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourwebsite.com

# Email Notifications
NOTIFICATION_EMAIL=admin@yourwebsite.com
ADMIN_PANEL_URL=http://localhost:3000/admin
